<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include layout="@layout/activity_navbar"
        android:id="@+id/navbarLayout"/>

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da revenda escolhida"
        android:textColor="#3B7E71"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/navbarLayout"
        android:paddingBottom="8dp"
        android:textStyle="bold"
        android:background="@drawable/border_bottom_gray"/>

    <TextView
        android:id="@+id/enderecoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço"
        android:layout_below="@id/tituloTextView"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/cidadeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidade"
        android:layout_below="@id/enderecoTextView"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/telefoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone"
        android:layout_below="@id/cidadeTextView"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="#3B7E71"
        android:layout_marginTop="8dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/whatsappTituloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clique e chame no Whatsapp"
        android:textSize="16sp"
        android:layout_below="@id/telefoneTextView"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="8dp"
        android:textColor="#3B7E71"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/whatsappLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/whatsappTituloTextView"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/whatsappIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_whatsapp"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/whatsappNumeroTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número do Whatsapp"
            android:textSize="16sp"
            android:textColor="#3B7E71"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:layout_below="@id/whatsappLinearLayout"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="#3B7E71"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/siteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Site"
        android:layout_below="@id/emailTextView"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="#3B7E71"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/redesSociaisLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/siteTextView"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/facebookIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook"/>
        <TextView
            android:id="@+id/facebookText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textSize="16sp"
            android:textColor="#3B7E71"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/instagramIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_instagram"/>
        <TextView
            android:id="@+id/instagramText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:textSize="16sp"
            android:textColor="#3B7E71"
            android:textStyle="bold"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/conhecaVeiculosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONHEÇA NOSSOS VEÍCULOS"
        android:textColor="#fff"
        android:layout_below="@id/redesSociaisLinearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@drawable/rounded_button"/>

</RelativeLayout>
